
<div class="container">
<div class="row">
<div>
<% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this obj from being saved:<br>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
<% end %>
</div>

<div class="col-md-3">
  <%= render 'users/list', book: @book, user: @user %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
  <thead>
    <th>Title</th>
    <th>Opinion	</th>
    <th colspan="3"></th>
  </thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user.id) do %>
    <%= image_tag book.user.get_profile_image(80,80)  %>
    <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
